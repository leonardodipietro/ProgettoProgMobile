<!-- res/layout/item_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagetopartist1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/topartist1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="artista 1"
            android:textSize="16sp"
            android:textColor="@color/dark_green"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <!-- Aggiungi un delimitatore tra gli elementi -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagetopartist2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/textopartist2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="artista 2"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dark_green" />

    </LinearLayout>

    <!-- Aggiungi un altro delimitatore -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <!-- Ripeti il pattern per gli altri elementi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagetopArtist3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />



        <TextView
            android:id="@+id/texttopartist3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="artista 3"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dark_green" />
    </LinearLayout>
</LinearLayout>