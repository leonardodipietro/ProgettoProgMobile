<resources>

    <style name="CustomTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">italic</item>
        <!-- Aggiungi altri attributi di stile desiderati -->
    </style>

    <style name="CustomTextStyleWhite">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <!-- Aggiungi altri attributi di stile desiderati -->
    </style>

    <!-- Aggiungi altri stili se necessario -->

    <style name="SwitchThemeOverlay" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/verde_spotify</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">25dp</item> <!-- Imposta il raggio degli angoli arrotondati -->
        <item name="backgroundTint">@color/verde_spotify</item> <!-- Imposta il colore di sfondo -->
    </style>

    <style name="CustomToggleButtonStyle">
        <item name="android:background">@drawable/buttonstyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomArrowStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item> <!-- Imposta il colore di sfondo -->
    </style>

    <style name="ButtonStyle" parent="">
        <item name="android:background">@drawable/unfollow_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButtonStyle2" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">25dp</item> <!-- Imposta il raggio degli angoli arrotondati -->
        <item name="backgroundTint">@color/verde_spotify</item> <!-- Imposta il colore di sfondo -->
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Modifica i colori desiderati -->
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Colore del testo -->
        <item name="android:editTextColor">@color/white</item>
        <!-- Colore del cursore -->
        <item name="colorControlNormal">@color/white</item>
        <item name="linearProgressIndicatorStyle">@color/verde_spotify</item>
        <item name="android:textColor">@color/white</item> <!-- Colore del testo -->
        <item name="android:textColorHint">@color/white</item> <!-- Colore del testo di suggerimento -->
        <item name="android:iconifiedByDefault">false</item> <!-- Barra di ricerca sempre espansa -->
    </style>
</resources>