<resources>

    <style name="CustomTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textStyle">italic</item>
        <!-- Aggiungi altri attributi di stile desiderati -->
    </style>

    <!-- Aggiungi altri stili se necessario -->

    <style name="SwitchThemeOverlay" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/verde_spotify</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item> <!-- Imposta il raggio degli angoli arrotondati -->
        <item name="backgroundTint">@color/verde_spotify</item> <!-- Imposta il colore di sfondo -->
    </style>

    <style name="CustomToggleButtonStyle">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>